clearfix() {
  &:after {
    display: block;
    clear: both;
    height: 0;
    content: "\0020";
  }
}
transition(t) {
  -webkit-transition t
  -moz-transition t
  -ms-transition t
  -o-transition t
  transition t
}
border_radius(r){
  -webkit-border-radius r
  -moz-border-radius r
  border-radius r
}
border_box(){
  -webkit-box-sizing: border-box
  -moz-box-sizing: border-box
  box-sizing: border-box
}
background_sizing(n){
  -webkit-background-size: n;
  background-size: n
}
box_shadow(c){
  -webkit-box-shadow: c;
  -moz-box-shadow: c;
  box-shadow: c;
}
